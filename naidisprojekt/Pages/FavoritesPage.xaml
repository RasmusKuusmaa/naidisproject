<ContentPage x:Name="FavoritesPageRoot"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="naidisprojekt.Pages.FavoritesPage"
             xmlns:vm="clr-namespace:naidisprojekt.Viewmodels"
             xmlns:converters="clr-namespace:naidisprojekt.Converters"
             Title="FavoritesPage">


    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteToImageConverter x:Key="ByteToImageConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:FavoritesViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10" Spacing="5">

        <CollectionView ItemsSource="{Binding Listings}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding ListingImage, Converter={StaticResource ByteToImageConverter}}"
                               WidthRequest="50"
                               HeightRequest="50"
                               Aspect="AspectFill"
                               Grid.Column="0"
                               VerticalOptions="Center">
                            <Image.Clip>
                                <RoundRectangleGeometry CornerRadius="10" Rect="0,0,50,50"/>
                            </Image.Clip>
                        </Image>
                        <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center">
                            <Label Text="{Binding ListingName}" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="{Binding Price, StringFormat='${0:F2}'}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                        <ImageButton Source="shape.png"
             WidthRequest="14"
             HeightRequest="14"
             Grid.Column="2"
             VerticalOptions="Start"
             HorizontalOptions="End"
             BackgroundColor="Transparent"
             Command="{Binding BindingContext.RemoveCommand, Source={x:Reference FavoritesPageRoot}}"
             CommandParameter="{Binding .}"/>
                        <BoxView HeightRequest="1" BackgroundColor="LightGray" Grid.ColumnSpan="3" VerticalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
