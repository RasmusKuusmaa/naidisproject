<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="naidisprojekt.Pages.SignInPage"
             Title="Sign In">
    <VerticalStackLayout Margin="40,0">

        <Label Text="E-mail"
               FontSize="14"
               Margin="0,50,0,0"
               TextColor="#4F63AC"/>
        <Frame 
         Margin="0,15"
        Padding="0" 
        BackgroundColor="White" 
        BorderColor="#8D9BB5" 
        CornerRadius="14"
        HasShadow="False"
        HeightRequest="50"> 

        <Entry 
        x:Name="StyledEntry"
        Placeholder="Enter text"
        BackgroundColor="Transparent"
        TextColor="Black"
        Margin="10,0"
        VerticalOptions="Center"
        IsSpellCheckEnabled="False"
        />
        </Frame>
        <Label Text="Password"
               TextColor="#4F63AC"
               FontSize="14"
               />
        <Frame 
            Margin="0,10"
        Padding="0" 
        BackgroundColor="White" 
        BorderColor="#8D9BB5" 
        CornerRadius="14"
        HasShadow="False"
        HeightRequest="50">

        <Entry 
        x:Name="PasswordEntry"
        Placeholder="Enter your password"
        IsPassword="True"
        BackgroundColor="Transparent"
        TextColor="Black"
        PlaceholderColor="Gray"
        Margin="10,0"
        VerticalOptions="Center" />
        </Frame>
        <Button Text="Sign In"
         Margin="0, 40,0,0"
         HeightRequest="60"
         BackgroundColor="#4F63AC"
         FontSize="16"
         FontAttributes="Bold"
         x:Name="SignUpBtn" Clicked="SignInBtn_Clicked"/>

    </VerticalStackLayout>
</ContentPage>