<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="naidisprojekt.Pages.MyListingsPage"
             Title="MyListingsPage"
             x:Name="MyListingsPageRoot"
             xmlns:vm="clr-namespace:naidisprojekt.Viewmodels"
             xmlns:converters="clr-namespace:naidisprojekt.Converters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteToImageConverter x:Key="ByteToImageConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:MyListingsViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10" Spacing="5">

        <CollectionView ItemsSource="{Binding Listings}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding ListingImage, Converter={StaticResource ByteToImageConverter}}"
                             WidthRequest="50"
                             HeightRequest="50"
                             Aspect="AspectFill"
                             Grid.Column="0"
                             VerticalOptions="Center">
                            <Image.Clip>
                                <RoundRectangleGeometry CornerRadius="10" Rect="0,0,50,50"/>
                            </Image.Clip>
                        </Image>
                        <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center">
                            <Label Text="{Binding ListingName}" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="{Binding Price, StringFormat='${0:F2}'}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                        <ImageButton Source="trashcan.png"
           WidthRequest="20"
           HeightRequest="20"
                                     MinimumHeightRequest="20"
                                     MinimumWidthRequest="20"
           Grid.Column="2"
           VerticalOptions="Start"
           HorizontalOptions="End"
           BackgroundColor="Transparent"
           Command="{Binding BindingContext.RemoveCommand, Source={x:Reference MyListingsPageRoot}}"
           CommandParameter="{Binding .}"/>
                        <BoxView HeightRequest="1" BackgroundColor="LightGray" Grid.ColumnSpan="3" VerticalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>